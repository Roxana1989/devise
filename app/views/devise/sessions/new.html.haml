.form-horizontal.col-xs-offset-4.col-xs-4
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    = devise_error_messages!
    %h3 Log in
    .form-group.col-xs-12
      / = f.label :email, :class => "col-xs-4 control-label"
      = f.email_field :email, autofocus: true, :class => "col-xs-offset-2 col-xs-8", :placeholder => "email"
    .col-xs-12.form-group
      / = f.label :password, :class => "col-xs-4 control-label"
      = f.password_field :password, autocomplete: "off", :placeholder => "password", :class => "col-xs-8 col-xs-offset-2 "
    - if devise_mapping.rememberable?
      .col-xs-6.form-group.remember-check
        = f.check_box :remember_me
        = f.label :remember_me
    .actions.form-group.col-xs-12
      = f.submit "Log in", :class => "btn btn-primary col-xs-offset-2 col-xs-8"
    %p.links.col-xs-offset-3.col-xs-8
      = render "devise/shared/links"

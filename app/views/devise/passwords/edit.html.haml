.form-horizontal.col-xs-offset-4.col-xs-4
  = form_for(resource, as: resource_name, url: password_path(resource_name)) do |f|
    = devise_error_messages!
    %h3 Change your password
    = f.hidden_field :reset_password_token
    .form-group.col-xs-12
      = f.password_field :password, autocomplete: "off", :class => "col-xs-offset-2 col-xs-8", :placeholder => "Password #{@minimum_password_length} characters minimum"
    .form-group.col-xs-12
      = f.password_field :password_confirmation, autocomplete: "off", :class => "col-xs-offset-2 col-xs-8", :placeholder => "Password confirmation"
    .actions.form-group.col-xs-12
      = f.submit "Change password", :class => "btn btn-primary col-xs-offset-2 col-xs-8"
    %p.links.col-xs-offset-2.col-xs-8
      = render "devise/shared/links"

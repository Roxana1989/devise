.form-horizontal.col-xs-offset-4.col-xs-4
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = devise_error_messages!
    %h3 Sign up
    .form-group.col-xs-12
      = f.text_field :name, autofocus: true, :class => "col-xs-offset-2 col-xs-8", :placeholder => "name"
    .form-group.col-xs-12
      = f.email_field :email, :class => "col-xs-offset-2 col-xs-8", :placeholder => "email"
    .form-group.col-xs-12
      = f.number_field :age, :class => "col-xs-offset-2 col-xs-3", :placeholder => "age", :min => 0, :max => 150
    .form-group.col-xs-12
      = f.password_field :password, autocomplete: "off", :class => "col-xs-offset-2 col-xs-8", :placeholder => "password #{@minimum_password_length} characters minimum"
    .form-group.col-xs-12
      = f.password_field :password_confirmation, autocomplete: "off", :class => "col-xs-offset-2 col-xs-8", :placeholder => "password confirmation"
    .form-group.col-xs-12
      = f.label :avatar, :class => "col-xs-offset-2 col-xs-8 avatar" 
      %br/
      = f.file_field :avatar, :class => "col-xs-offset-2 col-xs-8"
    .actions.form-group.col-xs-12
      = f.submit "Sign up", :class => "btn btn-primary col-xs-offset-2 col-xs-8"
    %p.links.col-xs-offset-2.col-xs-8
      = render "devise/shared/links"

